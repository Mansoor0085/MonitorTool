@model List<QuizViewModel>
@{
    ViewData["Title"] = "C# Quiz";
}

<h2>C# Quiz</h2>

<form asp-action="Submit" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="question">
            <h4>Question @(i + 1): @Model[i].QuestionText</h4>
            @foreach (var option in Model[i].Options)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="Model[i].Options[@Model[i].Options.IndexOf(option)].Selected" />
                    <label class="form-check-label" asp-for="Model[i].Options[@Model[i].Options.IndexOf(option)].Selected">@option.OptionText</label>
                </div>
            }
        </div>
        <hr />
    }

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
